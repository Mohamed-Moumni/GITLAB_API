<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="instance_group_user" model="res.groups">
            <field name="name">User</field>
        </record>

        <record id="instance_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('instance_group_user'))]" />
        </record>

        <record id="instance_group_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="implied_ids" eval="[(4, ref('instance_group_manager'))]" />
        </record>
    </data>
</odoo>
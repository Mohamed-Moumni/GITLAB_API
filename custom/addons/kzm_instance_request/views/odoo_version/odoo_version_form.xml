<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="odoo_version_view_form" model="ir.ui.view">
            <field name="name">odoo.version.form</field>
            <field name="model">odoo.version</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Version"/>
                        </group>
                        <notebook>
                            <page string="Instances">
                                <field name="instance_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
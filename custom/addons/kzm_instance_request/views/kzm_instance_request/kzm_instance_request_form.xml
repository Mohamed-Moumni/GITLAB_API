<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kzm_instance_request_form_view" model="ir.ui.view">
            <field name="name">kzm.instance.form.view</field>
            <field name="model">kzm.instance.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <div style="display: flex;gap:10px;">
                            <button name="change_to_Brouillon" type="object" string="To Bruillon"
                                class="oe_highlight"
                                attrs="{
                                'invisible': [
                                ('state', 'in', ['Soumise', 'Traitee']),
                                ],
                                'readonly': [
                                    ('state', 'in', ['Brouillon']),
                                ]
                                }"
                            />
                            <button name="change_to_Soumise" type="object" string="To Soumise"
                                class="oe_highlight"
                                attrs="{
                                'invisible': [
                                ('state', 'in', ['Brouillon',]),
                                ],
                                'readonly': [
                                    ('state', 'in', ['Soumise']),
                                ]
                                }" />
                            <button name="change_to_En_Traitement" type="object"
                                string="To En Traitement"
                                class="oe_highlight"
                                attrs="{
                                    'invisible': [
                                ('state', 'in', ['Soumise', 'Brouillon', 'Traitee']),
                                ],
                                'readonly': [
                                ('state', 'in', ['En traitement']),
                                ]
                            }"
                            groups="kzm_instance_request.instance_group_manager"
                            />
                            <button name="change_to_Traitee" type="object" string="To Traitee"
                                class="oe_highlight"
                                attrs="{
                                    'invisible': [
                                    ('state', 'in', ['En traitement']),
                                    ],
                                    'readonly': [
                                    ('state', 'in', ['Traitee']),
                                    ]
                                }"
                                groups="kzm_instance_request.instance_group_manager"
                            />
                        </div>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" required="1" />
                            <field name="address_ip"
                                attrs="{'invisible': [('state', '!=', 'Traitee')]}" />
                            <field name="active" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="cpu" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="ram" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="disk" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="url" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="state" attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="limit_date" required="1"
                                attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="treat_date"
                                attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="treat_duration"
                                attrs="{'readonly': [('state', '=', 'Traitee')]}" />
                            <field name="partner_id" />
                            <field name="tl_id" />
                            <field name="tl_user_id" />
                            <field name="odoo_id" />
                            <field name="perimeters_ids" />
                            <field name="perimeters_nums" />
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
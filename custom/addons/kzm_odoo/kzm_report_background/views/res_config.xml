<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="base_document_layout_document_background">
            <field name="name">base.document.layout.background</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='layout_background_image']" position="after">
                        <field name="background_application" class="oe_inline"/>
                        <field name="pagination_section" class="oe_inline"/>
                        <field name="pagination_height" class="oe_inline"
                               attrs="{'invisible':[('pagination_section', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="before">
                    <field name="referenced" invisible="1"/>
                    <widget name="web_ribbon" title="Non Référencé" bg_color="bg-danger"
                            attrs="{'invisible': [('referenced', '!=', False)]}"/>
                    <widget name="web_ribbon" title="Référencé" bg_color="bg-success"
                            attrs="{'invisible': [('referenced', '!=', True)]}"/>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <field name="supplier_rank" invisible="1"/>
                        <field name="customer_rank" invisible="1"/>
                        <button type="object" name="validate_reference" string="Valider la référence"
                                class="btn-primary"
                                groups="kzm_referencement.group_referencement_client"
                                attrs="{'invisible': ['|', ('referenced', '=', True), ('supplier_rank', '>', 0)]}"/>
                        <button type="object" name="cancel_reference" string="Annuler la référence"
                                class="btn-secondary"
                                groups="kzm_referencement.group_referencement_client"
                                attrs="{'invisible': ['|', ('referenced', '=', False), ('supplier_rank', '>', 0)]}"/>

                        <button type="object" name="validate_reference" string="Valider la référence"
                                class="btn-primary"
                                groups="kzm_referencement.group_referencement_fournisseur"
                                attrs="{'invisible': ['|', ('referenced', '=', True), ('customer_rank', '>', 0)]}"/>
                        <button type="object" name="cancel_reference" string="Annuler la référence"
                                class="btn-secondary"
                                groups="kzm_referencement.group_referencement_fournisseur"
                                attrs="{'invisible': ['|', ('referenced', '=', False), ('customer_rank', '>', 0)]}"/>

                        <button type="object" name="validate_reference" string="Valider la référence"
                                class="btn-primary"
                                groups="kzm_referencement.group_referencement_client,kzm_referencement.group_referencement_fournisseur"
                                attrs="{'invisible': ['|','|', ('referenced', '=', True),  ('customer_rank', '=', 0), ('supplier_rank', '=', 0)]}"/>
                        <button type="object" name="cancel_reference" string="Annuler la référence"
                                class="btn-secondary"
                                groups="kzm_referencement.group_referencement_fournisseur,kzm_referencement.group_referencement_fournisseur"
                                attrs="{'invisible': ['|','|', ('referenced', '=', False), ('customer_rank', '=', 0), ('supplier_rank', '=', 0)]}"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="view_res_partner_tree_inherited" model="ir.ui.view">
            <field name="name">res.partner.inherit.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="referenced"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">referenced == False</attribute>
                    <attribute name="decoration-success">referenced != False</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

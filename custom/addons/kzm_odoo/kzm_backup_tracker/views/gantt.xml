<odoo>
    <data>
        <record model="ir.ui.view" id="kzm_backup_tracker.tree">
            <field name="name">kzm.backup.tracker.tree</field>
            <field name="model">kzm.backup.tracker.gantt</field>
            <field name="arch" type="xml">
                <tree string="Gcloud Tree">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="backup_name"/>
                    <field name="backup_path"/>
                    <field name="gcloud_backup_line"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="kzm_backup_tracker_gantt_form_view" model="ir.ui.view">
            <field name="name">kzm.backup.tracker.gantt.form</field>
            <field name="model">kzm.backup.tracker.gantt</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_link_to_dwnld" icon="fa-arrow-right" type="object"
                                string="Download backup" class="oe_highlight" invisible="0"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="backup_path" readonly="1"/>
                                <field name="backup_name" readonly="1"/>
                            </group>
                            <group>
                                <label for="start_date"/>
                                <div class="w-100">
                                    <div class="o_row">
                                        <field name="start_date" readonly="1" widget="daterange"
                                               options="{'related_end_date': 'end_date'}"/>
                                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                        <field name="end_date" readonly="1" widget="daterange"
                                               options="{'related_start_date': 'start_date'}"/>
                                    </div>
                                </div>
                                <field name="role_id" readonly="1"/>
                                <field name="gcloud_backup_line" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="backup_gantt_view">
            <field name="name">kzm.backup.tracker.gantt</field>
            <field name="model">kzm.backup.tracker.gantt</field>
            <field name="arch" type="xml">
                <gantt string="Session Gantt"
                       date_start="start_date" date_stop="end_date"
                       default_group_by='backup_path'
                       color="color"
                       default_scale="week">
                </gantt>
            </field>
        </record>
        <record model="ir.actions.act_window" id="kzm_backup_tracker_gantt_view">
            <field name="name">Backup Tracker Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kzm.backup.tracker.gantt</field>
            <field name="view_mode">gantt,tree,form</field>
            <field name="context">{}</field>
        </record>


    </data>
</odoo>

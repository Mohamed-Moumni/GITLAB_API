<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">
        <record id="fiscalyear" model="date.range.type">
            <field name="name">Année fiscale</field>
            <field name="allow_overlap" eval="False"/>
            <field name="unit_of_time">0</field>
            <field name="duration_count">1</field>
            <field name="name_expr">str(date_start.strftime('%Y'))+'/'+str(date_end.strftime('%Y'))</field>
        </record>

        <record id="fiscalperiod" model="date.range.type">
            <field name="name">Période mensuelle</field>
            <field name="unit_of_time">1</field>
            <field name="duration_count">1</field>
            <field name="company_id" eval="False"/>
            <field name="name_expr">str(date_start.strftime('%m'))+'/'+str(date_end.strftime('%Y'))</field>
        </record>

        <record id="fiscaltriperiod" model="date.range.type">
            <field name="name">Période trimestrielle</field>
            <field name="unit_of_time">1</field>
            <field name="duration_count">3</field>
            <field name="company_id" eval="False"/>
            <field name="name_expr">str(date_start.strftime('%m'))+'/'+str(date_end.strftime('%m'))</field>
        </record>

        <record id="fiscalquinzaine" model="date.range.type">
            <field name="name">Période trimestrielle</field>
            <field name="unit_of_time">1</field>
            <field name="duration_count">3</field>
            <field name="company_id" eval="False"/>
            <field name="name_expr">str(date_start.strftime('%d'))+'-'+str(date_end.strftime('%d')) +" "+date_start.strftime("%b")+" "+str(date_start.strftime('%Y'))
            </field>
        </record>
    </data>
</odoo>

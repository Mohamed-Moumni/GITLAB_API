<odoo>
    <data>
        <!-- GRAPH INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_graph_view">
            <field name="name">instance.graph</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <graph string="Instance" type="pie">
                    <field name="check_date"/>
                    <field name="ram_consumption" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- PIVOT INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_pivot_view">
            <field name="name">instance.pivot</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <pivot string="Instance">
                    <field name="check_date"/>
                    <field name="ram_consumption" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- KANBAN INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_kanban_view">
            <field name="name">instance.kanban</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <kanban default_group_by="server_config" create="0">
                    <field name="server_config" readonly="1"/>
                    <field name="disk_capacity" invisible="1"/>
                    <field name="max_cpu_consumption" invisible="1"/>
                    <field name="max_ram_consumption" invisible="1"/>
                    <field name="color" invisible="1"/>
                    <field name="disk_consumption" invisible="1"/>
                    <field name="ping_status" invisible="1"/>
                    <field name="disk_consumption_text" invisible="1"/>
                    <field name="ram_consumption_text" invisible="1"/>
                    <field name="cpu_consumption_text" invisible="1"/>
                    <gauge field="state"
                           colors='{"1": "success", "0": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.value)}">
                                <b>
                                    <h2>
                                        <center>
                                            <field name="host_name"/>
                                        </center>
                                        <div class="oe_kanban_details">
                                            <strong>
                                                <ul>
                                                    <li class="text-success float-right mb4"
                                                        t-if="record.ping_status">
                                                        <i class="fa fa-circle"
                                                           role="img"
                                                           aria-label="Online"
                                                           title="Online"></i>
                                                    </li>
                                                    <li class="text-danger float-right mb4"
                                                        t-if="!record.ping_status">
                                                        <i class="fa fa-circle"
                                                           role="img"
                                                           aria-label="Offline"
                                                           title="Offline"></i>
                                                    </li>
                                                </ul>
                                            </strong>
                                        </div>
                                    </h2>
                                </b>
                                <br/>
                                Checking Date:
                                <b>
                                    <field name="check_date"/>
                                </b>
                                <br/>
                                <div class="text-center">
                                    <div>
                                        Disk :
                                        <b>
                                            <field name="disk_used"/>/
                                            <field
                                                name="disk_capacity"/>
                                            GB
                                        </b>
                                    </div>
                                    <div>
                                        <field name="disk_used"
                                               widget="gauge"
                                               options="{'max_field': 'disk_capacity',
                                                'title' :' ',
                                                'style': 'position: relative;
                                                          margin-top: -44px;
                                                          width:40%;
                                                          height: 120px;
                                                        '}"
                                        />
                                    </div>
                                </div>
                                <div class="text-center">
                                    <div>
                                        <div class="d-inline">
                                            CPU :
                                            <b>
                                                <field
                                                    name="cpu_consumption_text"/>
                                            </b>
                                        </div>
                                        <div class="d-inline"
                                             style="margin-left: 30px;">
                                            RAM :
                                            <b>
                                                <field name="ram_available"/>/
                                                <field
                                                    name="ram_capacity"/>
                                                GB
                                            </b>
                                        </div>
                                    </div>
                                    <div>
                                        <field name="cpu_consumption"
                                               widget="gauge"
                                               options="{'max_field': 'max_cpu_consumption',
                                                'title' :' ',
                                                'style': 'position: relative;
                                                          margin-top: -44px;
                                                          width:40%;
                                                          height: 120px;
                                                        '}"
                                        />
                                        <field name="ram_consumption"
                                               widget="gauge"
                                               options="{'max_field': 'max_ram_consumption',
                                                'title' :' ',
                                                'style': 'position: relative;
                                                          margin-top: -44px;
                                                          width:40%;
                                                          height: 120px;
                                                        '}"
                                        />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- FORM INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_form_view">
            <field name="name">instance.form</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <form string="Form" create="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="host_name" readonly="1"/>
                                <field name="check_date" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="ping_status" readonly="1"/>
                            </group>
                            <group>
                                <field name="ram_capacity" readonly="1"/>
                                <field name="ram_available" readonly="1"/>
                                <field name="ram_consumption" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="disk_capacity" readonly="1"/>
                                <field name="disk_used" readonly="1"/>
                                <field name="disk_available" readonly="1"/>
                                <field name="disk_consumption" readonly="1"/>
                            </group>
                            <group>
                                <field name="cpu_number" readonly="1"/>
                                <field name="cpu_consumption" readonly="1"/>
                                <field name="cpu_freq" readonly="1"/>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREE INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_tree_view">
            <field name="name">instance.tree</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state=='0'" decoration-info="state=='1'"
                      create="0">
                    <field name="host_name"/>
                    <field name="state"/>
                    <field name="check_date" readonly="1"/>
                    <field name="ram_capacity" readonly="1"/>
                    <field name="ram_available" readonly="1"/>
                    <field name="ram_consumption" readonly="1"/>
                    <field name="disk_capacity" readonly="1"/>
                    <field name="disk_used" readonly="1"/>
                    <field name="disk_available" readonly="1"/>
                    <field name="disk_consumption" readonly="1"/>
                    <field name="cpu_number" readonly="1"/>
                    <field name="cpu_consumption" readonly="1"/>
                    <field name="cpu_freq" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- GANTT INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_gantt_view">
            <field name="name">instance.gantt</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <gantt
                    edit="0"
                    create="0"
                    color="color"
                    date_start="date_start"
                    date_stop="date_stop"
                    default_group_by='server_config'
                    default_scale="week">
                    <field name="host_name"/>
                    <field name="disk_available"/>
                    <field name="ram_consumption"/>
                    <field name="cpu_consumption"/>
                    <templates>
                        <div t-name="gantt-popover" class="container-fluid p-0">
                            <div class="row no-gutters">
                                <div class="col">
                                    <ul class="p-0 mb-0 list-unstyled d-flex flex-row">
                                        <li class="d-flex flex-column pr-2">
                                            <strong>DISK Available:</strong>
                                            <strong>RAM Consumption:</strong>
                                            <strong>CPU Consumption:</strong>
                                        </li>
                                        <li class="d-flex flex-column">
                                            <span t-esc="disk_available"/>
                                            <span t-esc="ram_consumption"/>
                                            <span t-esc="cpu_consumption"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </templates>
                </gantt>
            </field>
        </record>

        <!-- SEARCH INSTANCE MONITORING -->
        <record model="ir.ui.view" id="instance_search_view">
            <field name="name">instance.search</field>
            <field name="model">odoo.instance.monitoring</field>
            <field name="arch" type="xml">
                <search>
                    <field name="host_name" readonly="1"/>
                    <field name="check_date" readonly="1"/>

                    <filter name="my_instances" string="My Instances"
                            domain="[('server_config.responsible_id', '=', uid)]"/>
                    <filter name="ram_ok" string="RAM OK"
                            domain="[('ram_consumption', '&lt;=', 90)]"/>
                    <filter name="ram_nok" string="RAM NOK"
                            domain="[('ram_consumption', '&gt;', 90)]"/>
                    <filter name="cpu_ok" string="CPU OK"
                            domain="[('cpu_consumption', '&lt;=', 90)]"/>
                    <filter name="cpu_nok" string="CPU NOK"
                            domain="[('cpu_consumption', '&gt;', 90)]"/>
                    <filter name="disk_nok" string="DISK NOK"
                            domain="[('disk_available', '&lt;=', 2)]"/>
                    <filter name="disk_ok" string="DISK OK"
                            domain="[('disk_available', '&gt;', 2)]"/>

                    <group string="Group By">
                        <filter name="by_configuration" string="Configuration"
                                context="{'group_by': 'server_config'}"/>
                    </group>

                    <group string="Group By">
                        <filter name="by_state" string="State"
                                context="{'group_by': 'state'}"/>
                    </group>

                    <group string="Group By">
                        <filter name="by_check_date" string="Check Date"
                                context="{'group_by': 'check_date'}"/>
                    </group>

                </search>
            </field>
        </record>

        <!-- ACTION INSTANCE MONITORING -->
        <record model="ir.actions.act_window" id="instance_list_action">
            <field name="name">Instance</field>
            <field name="res_model">odoo.instance.monitoring</field>
            <field name="view_mode">graph,pivot,kanban,form,gantt,tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Instance!</p>
            </field>
        </record>

    </data>
</odoo>

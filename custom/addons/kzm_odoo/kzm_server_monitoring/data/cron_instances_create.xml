<odoo>
    <data noupdate="1">
        <record forcecreate="True" id="instances_create" model="ir.cron">
            <field name="name">Create Servers Instances</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model_id" ref="model_odoo_server_config"/>
            <field name="state">code</field>
            <field name="code">model.invoke_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 08:00:00')"/>
            <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>

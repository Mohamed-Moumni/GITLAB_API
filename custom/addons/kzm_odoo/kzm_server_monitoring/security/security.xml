<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="acces_category" model="ir.module.category">
            <field name="description">Monitoring Instance</field>
            <field name="name">Monitoring Instance</field>
            <field name="sequence">9</field>
        </record>
        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kzm_server_monitoring.acces_category"/>

        </record>
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('kzm_server_monitoring.group_user'),])]"/>
            <field name="category_id" ref="kzm_server_monitoring.acces_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>

        </record>
    </data>
</odoo>

<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_sms_form_view">
            <field name="name">wizard_sms.form</field>
            <field name="model">message.sms</field>
            <field name="arch" type="xml">
                <form string="Sent SMS">
                    <group>
                        <field name="service"/>
                        <field name="remarque" readonly="1"/>
                        <field name="destinateur"/>
                        <field name="sms"/>
                    </group>
                    <footer>
                        <button name="sms_odoo" type="object"
                                string="sent" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="launch_sms_wizard" model="ir.actions.act_window">
            <field name="name">Sent SMS</field>
            <field name="res_model">message.sms</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_view_types" eval="'form'"/>
        </record>
    </data>
</odoo>

<odoo>

    <record id="account_fast_reconcile_wizard_view_form" model="ir.ui.view">
        <field name="name">account.fast.reconcile.wizard.view.form</field>
        <field name="model">account.fast.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Fast reconcile wizard form">
                <sheet>
                    <group>
                        <field name="limit" required="0"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="remaining" readonly="1"/>
                        <field name="move_line_ids">
                            <!--                            <tree>-->
                            <!--&lt;!&ndash;                                <field name="ref_lettrage_v8"/>&ndash;&gt;-->
                            <!--                                <field name="date"/>-->
                            <!--                                <field name="move_id"/>-->
                            <!--                                <field name="account_id"/>-->
                            <!--                                <field name="partner_id"/>-->
                            <!--                                <field name="debit"/>-->
                            <!--                                <field name="credit"/>-->
                            <!--                                <field name="balance"/>-->
                            <!--                                &lt;!&ndash;                                <field name="balance"/>&ndash;&gt;-->
                            <!--                            </tree>-->
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="fast_reconcile"
                            string="Reconcile" type="object"
                            class="btn-primary"/>
                    <button name="q_fast_reconcile"
                            string="Job Reconcile" type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="reconcile_wizard_action" model="ir.actions.act_window">
        <field name="name">Reconcile wizard action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.fast.reconcile.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="fast_reconcile_wizard_menu" name="Fast reconcile" parent="account.account_account_menu"
              action="reconcile_wizard_action"/>


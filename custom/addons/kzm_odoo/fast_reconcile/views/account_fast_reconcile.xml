<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_fast_reconcile_view_form" model="ir.ui.view">
        <field name="name">account.fast.reoncile.view.form</field>
        <field name="model">account.fast.reconcile</field>
        <field name="arch" type="xml">
            <form string="Account fast reconcile">
                <sheet>
                    <group>
                        <group>
                            <field name="ref_v8"/>
                            <field name="corresponding_number"/>
                        </group>
                        <group>
                            <field name="account_move_line_ids">
                                <tree edit="0" create="0">
                                    <field name="date"/>
                                    <field name="move_id"/>
                                    <field name="account_id"/>
                                    <field name="partner_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_fast_reconcile_view_tree" model="ir.ui.view">
        <field name="name">account.fast.reoncile.view.tree</field>
        <field name="model">account.fast.reconcile</field>
        <field name="arch" type="xml">
            <tree string="Account fast reconcile">
                <field name="ref_v8"/>
                <field name="corresponding_number"/>
            </tree>
        </field>
    </record>
</odoo>

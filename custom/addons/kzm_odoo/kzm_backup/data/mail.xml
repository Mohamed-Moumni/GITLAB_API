<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kzm_backup_email_template1" model="mail.template">
            <field name="name">Failed Backup</field>
            <field name="email_from">
                ${object.company_id and object.company_id.email or ''}
            </field>
            <field name="subject">Backup failed for ${(object.db_name)}</field>
            <field name="email_to">
                ${object.user_id and object.user_id.partner_id and object.user_id.partner_id.email or ''}
            </field>
            <field name="model_id" ref="kzm_backup.model_kzm_instance"/>
            <field name="body_html">
                <![CDATA[
                <p>Le backup de la base de données ${(object.db_name)} a
                    echoué<br/><br/>
                ]]>
            </field>
        </record>
    </data>
</odoo>


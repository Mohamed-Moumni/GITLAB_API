<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record model="ir.ui.view" id="sale_subscription_service_view_form">
        <field name="name">sale.subscription.service.form</field>
        <field name="model">sale.subscription.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <group>
                        <group>
                            <field name="subscription_id"/>
                            <field name="service_id"/>
                        </group>
                        <group>
                            <field name="type_id" required="1"/>
                            <field name="sla_average_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_subscription_service_view_tree">
        <field name="name">sale.subscription.service.tree</field>
        <field name="model">sale.subscription.service</field>
        <field name="arch" type="xml">
            <tree string="Service">
                <field name="subscription_id"/>
                <field name="service_id"/>
                <field name="type_id"/>
                <field name="sla_average_id"/>
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_subscription_service_action">
        <field name="name">Service</field>
        <field name="res_model">sale.subscription.service</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
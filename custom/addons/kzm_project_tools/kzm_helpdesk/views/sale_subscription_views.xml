<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='close_reason_id']" position="after">
                <field name="project_id" force_save="1" readonly="1"/>
                <field name="task_id" force_save="1" readonly="1"/>
                <field name="odoo_version_id"/>
            </xpath>

            <xpath expr="//field[@name='team_id']" position="after">
                <field name="teamlead_id"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Services">
                    <field name="service_ids">
                        <tree editable="top">
                            <field name="service_id"/>
                            <field name="type_id" required="1"/>
                            <field name="sla_average_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
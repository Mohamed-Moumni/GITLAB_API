<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="sub_product_form_view">
            <field name="name">product.templateFco.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='recurring_invoice']" position="after">
                <field name="operation_id"  attrs="{'invisible': [('recurring_invoice', '!=', True)]}"/>
            </xpath>
            </field>
        </record>
</odoo>
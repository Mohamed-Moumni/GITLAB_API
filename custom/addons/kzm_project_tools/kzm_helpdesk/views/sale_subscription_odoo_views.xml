<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="sale_subscription_odoo_view_tree">
        <field name="name">sale.subscription.odoo.tree</field>
        <field name="model">sale.subscription.odoo</field>
        <field name="arch" type="xml">
            <tree string="Version" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_subscription_odoo_action">
        <field name="name">Odoo Version</field>
        <field name="res_model">sale.subscription.odoo</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="subscription_menu_config_odoo_version"
        name="Odoo Version"
        action="sale_subscription_odoo_action"
        parent="sale_subscription.menu_sale_subscription_config"
        />

</odoo>
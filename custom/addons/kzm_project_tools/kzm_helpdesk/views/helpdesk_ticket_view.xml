<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kzm_helpdesk_ticket" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="after">
                <field name="contact" domain="[('id','child_of',partner_id)]"/>
                <field name="subscription_id"/>
                <field name="nature_ids" invisible="1"/>
                <field name="validity_date" />
<!--                <field name="nature_id" domain="[('id','in',nature_ids)]"/>-->
                <field name="available_sold"/>
                <field name="sla_ticket"/>
                <field name="odoo_version_id"/>
            </xpath>
             <xpath expr="//field[@name='ticket_type_id']" position="attributes">
                 <attribute name="domain">[('id','in',nature_ids)]</attribute>
             </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_product_form_view">
        <field name="name">helpdesk.ticket.type.form</field>
        <field name="model">helpdesk.ticket.type</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_type_view_tree"/>
        <field name="arch" type="xml">
            <xpath position="attributes" expr="//tree">
                <attribute name="editable"></attribute>
            </xpath>
            <xpath position="after" expr="//field[@name='name']">
                <field name="description" widget="html"/>
            </xpath>
        </field>
    </record>

    <!--      HELPDESK.TICKET.TYPE-->
    <record id="fe_product_product_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.type.form</field>
        <field name="model">helpdesk.ticket.type</field>
        <field name="arch" type="xml">
            <form string="Delivery Packaging">
                <sheet>
                    <group>
                        <field name="sequence" widget="handle" groups="base.group_no_one" invisible="1"/>
                        <field name="name"/>
                        <field name="description" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
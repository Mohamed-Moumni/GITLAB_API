<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="training_data_form" model="ir.ui.view">
        <field name="name">chatgpt.training.data.form</field>
        <field name="model">chatgpt.training.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="model_id" readonly="1"/>
                        </group>
                        <group/>
                    </group>
                    <notebook>
                        <page string="Prompt">
                            <field name="prompt"/>
                        </page>
                        <page string="Completion">
                            <field name="completion"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="training_data_tree" model="ir.ui.view">
        <field name="name">chatgpt.training.data.tree</field>
        <field name="model">chatgpt.training.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="prompt"/>
                <field name="completion"/>
            </tree>
        </field>
    </record>

    <record id="training_data_action" model="ir.actions.act_window">
        <field name="name">Training Data</field>
        <field name="res_model">chatgpt.training.data</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

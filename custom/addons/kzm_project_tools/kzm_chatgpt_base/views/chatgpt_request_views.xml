<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chatgpt_request_form" model="ir.ui.view">
        <field name="name">chatgpt.request.form</field>
        <field name="model">chatgpt.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="total_tokens"/>
                            <field name="total_amount"/>
                        </group>
                        <group/>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="line_ids" readonly="1">
                                <tree>
                                    <field name="model"/>
                                    <field name="request_uuid"/>
                                    <field name="input_message"/>
                                    <field name="posted_response"/>
                                    <field name="total_tokens"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="chatgpt_request_tree" model="ir.ui.view">
        <field name="name">chatgpt.request.tree</field>
        <field name="model">chatgpt.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="total_tokens"/>
            </tree>
        </field>
    </record>

    <record id="chatgpt_request_action" model="ir.actions.act_window">
        <field name="name">Chatgpt Request</field>
        <field name="res_model">chatgpt.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

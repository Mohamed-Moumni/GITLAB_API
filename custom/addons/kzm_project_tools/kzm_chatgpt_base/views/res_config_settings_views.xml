<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Chat GPT" string="Chat GPT" data-key="chatgpt">
                    <h2>Chat GPT</h2>
                    <div class="row mt16 o_settings_container" style="margin-left:20px">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="content-group" name="openai_model">
                                <label for="openai_model"/>
                                <field name="openai_model" class="o_light_label"/>
                            </div>
                            <div class="content-group" name="openai_api_key">
                                <label for="openai_api_key"/>
                                <field name="openai_api_key" class="o_light_label"/>
                            </div>
                            <div class="content-group" name="custom_openai_model">
                                <label for="custom_openai_model"/>
                                <field name="custom_openai_model" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="chatgpt_configuration_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'chatgpt'}</field>
    </record>
</odoo>
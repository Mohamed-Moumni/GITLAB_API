<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chatgpt_request_line_form" model="ir.ui.view">
        <field name="name">chatgpt.request.line.form</field>
        <field name="model">chatgpt.request.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="request_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="request_uuid"/>
                            <field name="model"/>
                            <field name="total_tokens"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="GPT Response Json">
                            <field name="response_json" widget="text"/>
                        </page>
                        <page string="Input message">
                            <field name="input_message" widget="text"/>
                        </page>
                        <page string="Posted response">
                            <field name="posted_response" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="chatgpt_request_line_tree" model="ir.ui.view">
        <field name="name">chatgpt.request.line.tree</field>
        <field name="model">chatgpt.request.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="request_id"/>
                <field name="partner_id"/>
                <field name="model"/>
                <field name="total_tokens"/>
            </tree>
        </field>
    </record>

    <record id="chatgpt_request_line_action" model="ir.actions.act_window">
        <field name="name">Chatgpt Request Line</field>
        <field name="res_model">chatgpt.request.line</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

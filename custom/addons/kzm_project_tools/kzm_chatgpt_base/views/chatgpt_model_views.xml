<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chatgpt_model_form" model="ir.ui.view">
        <field name="name">chatgpt.model.form</field>
        <field name="model">chatgpt.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_jsonl_file" string="Generate Jsonl file" type="object"
                            attrs="{'invisible': [('job_id', '!=', False)]}"/>
                    <button name="create_fine_tuning_job" string="Create fine-tuning job" type="object"
                            attrs="{'invisible': ['|', ('training_file', '=', False), ('job_id', '!=', False)]}"/>
                    <button name="get_fine_tuning_state" string="Get fine-tuning state" type="object"
                            attrs="{'invisible': [('job_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button name="open_training_data_action" type="object" icon="fa-bars" class="oe_stat_button">
                            Training Data
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="base_model"/>
                            <field name="job_id" readonly="1"/>
                            <field name="training_file_name" invisible="1"/>
                            <field name="training_file" filename="training_file_name" widget="binary"/>
                            <field name="fine_tuned_model" readonly="1"/>
                        </group>
                        <group/>
                    </group>
                    <notebook>
                        <page string="Training data">
                            <field name="training_data_ids">
                                <tree editable="bottom">
                                    <field name="prompt"/>
                                    <field name="completion"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="chatgpt_model_tree" model="ir.ui.view">
        <field name="name">chatgpt.model.tree</field>
        <field name="model">chatgpt.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="chatgpt_model_action" model="ir.actions.act_window">
        <field name="name">Chatgpt Model</field>
        <field name="res_model">chatgpt.model</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

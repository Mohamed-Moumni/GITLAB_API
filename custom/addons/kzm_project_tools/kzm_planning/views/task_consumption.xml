<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="taks_consumption_list_view">
            <field name="name">Task Consumption</field>
            <field name="model">task.consumption</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="task_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="taks_consumption_form_view">
            <field name="name">Task Consumption</field>
            <field name="model">task.consumption</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_report_lines_sm_view" type="object" class="oe_stat_button"
                                    icon="fa-chain">
                                <div class="o_stat_info">
                                    <field name="report_lines_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Report lines</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="task_id" invisible="1" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Report lines">
                                <field name="consumption_line_ids">
                                    <tree editable="bottom">
                                        <field name="ticket_id" readonly="1"/>
                                        <field name="created_on" readonly="1"/>
                                        <field name="subject" readonly="1"/>
                                        <field name="type_id"/>
                                        <field name="estimated_charge"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
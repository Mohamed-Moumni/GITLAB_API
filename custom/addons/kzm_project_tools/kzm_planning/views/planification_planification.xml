<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="planification_planification_list_view">
            <field name="name">Planification</field>
            <field name="model">planification.planification</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" readonly="1"/>
                    <field name="first_date"/>
                    <field name="last_date"/>
                    <field name="state"
                           decoration-info="state == 'draft'"
                           decoration-success="state == 'validated'"
                           widget="badge"
                    />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="planification_planification_form_view">
            <field name="name">Planification</field>
            <field name="model">planification.planification</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="remettre_en_brouillon" string="Re-draft" class="oe_highlight"
                                type="object" states="validated"/>
                        <button name="valider" string="validate" class="oe_highlight"
                                type="object" states="draft" groups="kzm_planning.group_validateur_planning"/>
                        <button name="generate_tasks" string="Generate tasks" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': [('plan_line_count', '>', 0)]}"/>
                        <button name="update_tasks" string="Update tasks" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': ['|',('plan_line_count', '=', 0),
                                ('state','=','validated')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_plan_line" type="object" class="oe_stat_button"
                                    icon="fa-tags">
                                <div class="o_stat_info">
                                    <field name="plan_line_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Activities</span>
                                </div>
                            </button>
                            <button name="action_planning" type="object" class="oe_stat_button"
                                    icon="fa-tasks">
                                <div class="o_stat_info">
                                    <field name="planning_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Lignes planification</span>
                                </div>
                            </button>
                            <button name="action_slot" type="object" class="oe_stat_button"
                                    icon="fa-table">
                                <div class="o_stat_info">
                                    <field name="slot_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Ressources</span>
                                </div>
                            </button>
                        </div>
                        <div>
                            <h1 class="oe_title">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="first_date" attrs="{'readonly': [('state', '=', 'validated')]}"/>
                                <field name="last_date" attrs="{'readonly': [('state', '=', 'validated')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Activities">
                                <field name="plan" attrs="{'readonly': [('state', '=', 'validated')]}"/>
                            </page>
                            <page string="Indicators">
                                <group col="3">
                                    <group>
                                        <field name="planned_ticket_count"/>
                                    </group>
                                    <group>
                                        <field name="estimated_charge_planned"/>
                                    </group>
                                    <group>
                                        <field name="real_charge_planned"/>
                                    </group>
                                </group>
                                <group col="3">
                                    <group>
                                        <field name="not_planned_ticket_count"/>
                                    </group>
                                    <group>
                                        <field name="estimated_charge_not_planned"/>
                                    </group>
                                    <group>
                                        <field name="real_charge_not_planned"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>
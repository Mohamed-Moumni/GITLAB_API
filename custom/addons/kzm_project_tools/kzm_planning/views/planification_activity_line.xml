<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="planification_activity_line_list_view">
            <field name="name">Planification activity line</field>
            <field name="model">planification.activity.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="task_id" readonly="0"/>
                    <field name="description" required="1"/>
                    <field name="ticket_id" domain="[('task_id', '=', parent.task_id)]"
                           context="{'default_task_id':task_id}"/>
                    <field name="total_charge"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="planification_activity_line_form_view">
            <field name="name">Planification activity line</field>
            <field name="model">planification.activity.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <div>
                            <h1 class="oe_title">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="task_id" readonly="1"/>
                                <field name="activity_id" readonly="1" invisible="1"/>
                                <field name="activity_id_task_id" invisible="1"/>
                                <field name="team_id" readonly="1"/>
                                <field name="activity_id" readonly="1"/>
                                <field name="partner_id" invisible="1"/>
                                <label for="ticket_id" string="Ticket"/>
                                <div>
                                    <field name="ticket_id"
                                           domain="[('task_id', '=', activity_id_task_id),('stage_id.is_clotured', '=', False)]"
                                           class="oe_inline" nolabel="1"
                                           context="{'default_task_id':task_id,
                                                  'default_team_id':team_id,
                                                  'default_partner_id':partner_id}"/>
                                    <field name="ticket_stage_id" class="oe_inline" nolabel="1"/>
                                </div>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ressources">
                                <field name="ressources_ids">
                                    <tree editable="bottom">
                                        <field name="task_id" invisible="1" readonly="1"/>
                                        <field name="ticket_id" invisible="1" readonly="1" optional="show"/>
                                        <field name="member_ids" invisible="1"/>
                                        <field name="team_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="resource_id" required="1" optional="show"
                                               domain="[('id', 'in', member_ids)]"/>
                                        <field name="description" required="1" optional="show"/>
                                        <field name="date"/>
                                        <field name="allocated_hours" optional="show" widget="float_time"/>
                                        <field name="start_datetime" optional="hide"/>
                                        <field name="end_datetime" optional="hide"/>
                                        <field name="state" optional="show"/>
                                        <field name="priority" widget="priority" optional="show"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="total_charge"/>
                                    </div>
                                    <field name="total_charge" nolabel="1" class="oe_subtotal_footer_separator"/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
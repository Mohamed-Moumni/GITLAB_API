<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ir_cron_action_create_planif_every_thursday" model="ir.cron">
            <field name="name">Create planification</field>
            <field name="model_id" ref="model_planification_planification"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="state">code</field>
            <field name="code">model._create_planification_by_cron()</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall"
                   eval="(DateTime.now() + relativedelta(weekday=3, hour=21, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
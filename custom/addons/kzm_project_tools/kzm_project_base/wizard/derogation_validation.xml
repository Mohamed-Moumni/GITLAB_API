<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="derogation_validation_view_form" model="ir.ui.view">
            <field name="name">derogation.validation.view.form</field>
            <field name="model">derogation.validation</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id" domain="[('id', 'in', domain_partner)]"/>
                            <field name="project_id" domain="[('id', 'in', domain_project)]"/>
                            <field name="derogation_id" invisible="1"/>
                            <field name="domain_project" invisible="1"/>
                            <field name="domain_partner" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="validate" string="Valider" type="object"
                                class="oe_highlight mx-2"/>
                        <button string="Cancel" class="oe_link mx-2" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="derogation_validation_view_action" model="ir.actions.act_window">
            <field name="name">derogation validation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">derogation.validation</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>

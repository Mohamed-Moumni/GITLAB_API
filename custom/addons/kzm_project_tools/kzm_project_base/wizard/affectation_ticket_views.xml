<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <data>
        <record id="view_affectation_ticket_wizard" model="ir.ui.view">
        <field name="name">affectation.ticket</field>
        <field name="model">affectation.ticket.wizard</field>
        <field name="arch" type="xml">
        <form string="Réaffectation Ticket">
           <sheet>
                <group name="" style="width:80%;">
                   <field name="ticket_id" invisible="1"/>
                    <field name="domain_tickets" invisible="1"/>
                    <group>
                        <field name="new_ticket_id" domain="[('id','in',domain_tickets)]"/>
                    </group>
                </group>
           </sheet>
           <footer>
               <button name='affect_ticket' string="Réaffecter" type="object" class="oe_highlight"/>
               <button special="cancel" string="Annuler" type="object" />
           </footer>
        </form>
        </field>
        </record>



    <record id="affectation_ticket_action" model="ir.actions.act_window">
            <field name="name">Réaffectation ticket</field>
            <field name="res_model">affectation.ticket.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_ticket_id': active_id}</field>
            <field name="view_id" ref="kzm_project_base.view_affectation_ticket_wizard"/>
            <field name="target">new</field>
    </record>
  </data>
</odoo>
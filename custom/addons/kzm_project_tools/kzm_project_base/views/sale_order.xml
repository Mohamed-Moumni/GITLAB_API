<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view -->
    <record model="ir.ui.view" id="sale_order_inherited_form_view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_subscription" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="contract_id" context="{'default_customer_id': partner_id}"
                       attrs="{'readonly':[('state','=','sale')]}"
                       />
                <field name="object" required="1"/>
            </xpath>
<!--            <xpath expr="//div[@name='button_box']" position="inside">-->

<!--                <button class="oe_stat_button" name="get_carnet" type="object" icon="fa-book"-->

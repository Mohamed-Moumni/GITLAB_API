<!--                            <field name="carnet_count" nolabel="1"/>-->
<!--                        </span>-->
<!--                        <span class="o_stat_text">-->
<!--                            Carnets-->
<!--                        </span>-->
<!--                    </div>-->
<!--                </button>-->

<!--            </xpath>-->
        </field>
    </record>
    <record model="ir.ui.view" id="sale_order_inherited_listm_view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="is_subscription" invisible="1"/>
                <field name="object" />
            </xpath>
        </field>
    </record>

    <record id="mymodule_message_wizard_form" model="ir.ui.view">
        <field name="name">sale.message.wizard.form</field>
        <field name="model">sale.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="message" readonly="True"/>
                <footer>
                    <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
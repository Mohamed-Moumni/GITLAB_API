<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="project_task_view_inherits_ot1">
            <field name="name">Project tasks</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="custom_tag_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//group/group[1]/field[@name='project_id']" position="after">
                    <field name="type" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="carnet_id" invisible="1"/>
                    <field name="is_user" invisible="1"/>
                    <field name="project_sale_order_id" invisible="1"/>
                    <field name="sale_order_id" invisible="1"/>
                    <field name="sale_id" invisible="1"/>
                    <field name="contract_id" readonly="1" force_save="1"/>
                    <field name="sale_order_id" readonly="1" attrs="{'invisible':[('sale_order_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//label[@for='planned_hours']" position="before">
                    <field name="user_has_edit_plafond" invisible="1"/>
                    <field name="plafond" widget="float_time"
                           attrs="{'readonly': [('user_has_edit_plafond', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='planned_hours']" position="after">
                    <group>
                        <field name="sold" widget="float_time"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='sale_line_id'][1]" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_user','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='sale_line_id'][2]" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_user','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_user','=',True)]}</attribute>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="get_sold_derogation" type="object" class="oe_stat_button" icon="fa-bell"
                            attrs="{'invisible':[('sold_derogation_count','=',0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="sold_derogation_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Derogations
                            </span>
                        </div>
                    </button>
                    <button name="get_all_ticket" type="object" class="oe_stat_button" icon="fa-ticket"
                            attrs="{'invisible':[('ticket_count','=',0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="ticket_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Tickets
                            </span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='planned_hours']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_user','=',True)]}</attribute>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="project_project_view_inherits_ot1">
            <field name="name">Projects</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="custom_tag_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="contract_id" force_save="1"/>
                    <field name="sale_order_id"/>
                    <field name="collective_project"/>
                    <field name="task_ids" invisible="1"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="open_tasks" type="object" class="oe_stat_button" icon="fa-tasks" string="TÃ¢ches"/>
                    <button name="get_all_ticket" type="object" class="oe_stat_button" icon="fa-ticket"
                            attrs="{'invisible':[('ticket_count','=',0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="ticket_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Tickets
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

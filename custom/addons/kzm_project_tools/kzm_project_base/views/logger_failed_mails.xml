<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="logger_failed_mail_form_view" model="ir.ui.view">
            <field name="name">logger.failed.mail.form</field>
            <field name="model">logger.failed.mail</field>
            <field name="arch" type="xml">
                <form string="Failed mails">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="message_id"/>
                            </group>
                            <group>
                                <field name="client_mail"/>
                                <field name="date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="logger_failed_mail_tree_view" model="ir.ui.view">
            <field name="name">logger.failed.mail.tree</field>
            <field name="model">logger.failed.mail</field>
            <field name="arch" type="xml">
                <tree string="Failed mails">
                    <field name="name"/>
                    <field name="message_id"/>
                    <field name="client_mail"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="logger_failed_mail_search_view" model="ir.ui.view">
            <field name="name">logger.failed.mail.search</field>
            <field name="model">logger.failed.mail</field>
            <field name="arch" type="xml">
                <search string="Failed mails">
                    <field name="name"/>
                    <field name="message_id"/>
                    <field name="client_mail"/>
                    <field name="date"/>
                    <group expand="1" string="Group By">
                        <filter string="Client mail" name="client_mail_search" domain="[]"
                                context="{'group_by':'client_mail'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="logger_failed_mail_act_window" model="ir.actions.act_window">
            <field name="name">Failed mails</field>
            <field name="res_model">logger.failed.mail</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Failed mails logger" id="logger_failed_mail_menu" parent="base.menu_email" action="logger_failed_mail_act_window" sequence="1000"/>

    </data>
</odoo>
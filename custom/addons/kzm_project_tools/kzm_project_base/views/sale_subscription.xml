<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_subscription_view_inherits_ot1">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="get_ticket" type="object" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible':[('is_subscription', '=', True)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="ticket_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Tickets
                            </span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="get_timesheet" type="object" icon="fa-life-ring" attrs="{'invisible':[('is_subscription', '=', True)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="timesheet_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Feuilles de temps
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_subscription_template_view_inherits_ot1">
            <field name="name">sale.order.template</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_mail_template_id']" position="after">
                    <field name="is_model" attrs="{'invisible':[('is_subscription', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
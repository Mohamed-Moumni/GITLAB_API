<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="openticket_form" name="Ouvrir un Ticket">
        <t t-call="portal.portal_layout">
            <div class="container" style="width: 56%;">
                <br/>
                <t t-if="valid == 0">
                    <div class="alert alert-danger">
                        <strong>Wraning!</strong>
                        Vous ne pouvez pas créer de ticket.
                    </div>
                </t>
                <t t-if="valid == 1">
                    <div class="alert alert-success">
                        <strong>Success!</strong>
                        Votre ticket a été été créé avec succès sous l'ID #
                        <t t-esc="ticket_id"/>
                    </div>
                </t>
                <br/>
                <div class="card" style="border-radius:10pt">
                    <article class="card-body">
                        <h2 class="card-title" style="color:#603b5b; font-weight:bold;" align="center">Ouvrir un
                            Ticket
                        </h2>
                        <div align="center">
                            <i class="fa fa-ticket" align="center" style="color:#603b5b; font-size:50px;"></i>
                        </div>

                        <br/>
                        <br/>

                        <form action="/openticket/submit/" method="post" enctype="multipart/form-data"
                              class="o_mark_required">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group row">
                                <label for="exampleInputEmail1" class="col-sm-2 col-form-label" style="color:#603b5b;">
                                    Sujet
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="sujet"
                                           placeholder="Sujet ..."
                                           aria-describedby="emailHelp" required="1"
                                    />
                                </div>
                            </div>
                            <br/>
                            <hr/>
                            <br/>
                            <div class="form-group row">
                                <label for="exampleInputEmail1" class="col-sm-2 col-form-label" style="color:#603b5b;">
                                    Description
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="exampleFormControlTextarea1" name="description"
                                              placeholder="Description ..."
                                              rows="8"
                                              required="1"></textarea>
                                </div>

                            </div>
                            <br/>
                            <hr/>
                            <br/>
                            <div class="form-group row">
                                <label for="exampleFormControlFile1" class="col-sm-2 col-form-label"
                                       style="color:#603b5b;">Pièces Jointes
                                </label>
                                <div class="col-sm-10">
                                    <input type="file" multiple="true" name="pj"/>
                                </div>
                            </div>
                            <br/>
                            <hr/>
                            <br/>
                            <div class="form-group" align="center">
                                <button type="submit" class="btn btn-primary"
                                        style="height:50px; width:230px; border-radius:18pt;font-weight:bold;">Valider
                                </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>


        </t>
    </template>
</odoo>
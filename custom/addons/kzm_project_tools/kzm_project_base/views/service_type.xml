<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="service_type_list">
            <field name="name">Service Type list</field>
            <field name="model">service.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom" name="Type de service">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="service_type_action_window">
            <field name="name">Service Type</field>
            <field name="res_model">service.type</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="Type de service" id="service_type_base_menu"
            parent="kzm_project_base.configuration_base_menu" sequence="2"
            action="service_type_action_window" />
    </data>
</odoo>
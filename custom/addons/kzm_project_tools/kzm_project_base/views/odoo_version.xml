<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="odoo_version_list">
            <field name="name">odoo version list</field>
            <field name="model">odoo.version</field>
            <field name="arch" type="xml">
                <tree editable="bottom" name="Type de service">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="odoo_version_action_window">
            <field name="name">Odoo version</field>
            <field name="res_model">odoo.version</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Version" id="odoo_version_base_menu" parent="configuration_base_menu" sequence="3"
                  action="odoo_version_action_window"/>
    </data>
</odoo>
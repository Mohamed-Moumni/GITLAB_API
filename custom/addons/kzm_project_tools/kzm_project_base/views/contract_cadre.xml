<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="contract_cadre_form">
            <field name="name">Contract Cadre form</field>
            <field name="model">contract.cadre</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': 1}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="get_leads" icon="fa-smile-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="leads_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Leads
                                    </span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="get_subscription" type="object"
                                    icon="fa-check-square-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="subscription_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Subscriptions
                                    </span>
                                </div>
                            </button>
                            <button name="get_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="task_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Tasks
                                    </span>
                                </div>
                            </button>
<!--                            <button class="oe_stat_button" name="get_task_request" type="object"-->
<!--                                    icon="fa-wrench" attrs="{'invisible':[('task_request_count','=',0)]}">-->
<!--                                <div class="o_field_widget o_stat_info">-->
<!--                                    <span class="o_stat_value">-->
<!--                                        <field name="task_request_count" nolabel="1"/>-->
<!--                                    </span>-->
<!--                                    <span class="o_stat_text">-->
<!--                                        Task requests-->
<!--                                    </span>-->
<!--                                </div>-->
<!--                            </button>-->
                            <button name="get_sold_derogation" type="object" class="oe_stat_button" icon="fa-bell" attrs="{'invisible':[('sold_derogation_count','=',0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="sold_derogation_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Derogations
                                    </span>
                                </div>
                            </button>
<!--
                            <button name="get_carnet" type="object"
                                    class="oe_stat_button" icon="fa-book">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="carnet_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Carnets
                                    </span>
                                </div>
                            </button>
-->
                            <button class="oe_stat_button" type="object" name="get_orders"
                                    icon="fa-file-text-o">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="order_count"/>
                                    </span>
                                    <span class="o_stat_text">Orders</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="get_invoices" type="object" icon="fa-usd">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="move_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Invoices
                                    </span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="get_projects" type="object" icon="fa-area-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="project_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Projects
                                    </span>
                                </div>
                            </button>

                            <button class="oe_stat_button" name="get_tickets" type="object" icon="fa-life-ring">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="ticket_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Tickets
                                    </span>
                                </div>
                            </button>

                            <button class="oe_stat_button" name="get_timesheet" type="object" icon="fa-tachometer">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="timesheet_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Time sheets
                                    </span>
                                </div>
                            </button>

                            <button class="oe_stat_button" name="get_databases" type="object" icon="fa-cloud">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="database_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Database
                                    </span>
                                </div>
                            </button>

                            <button class="oe_stat_button" name="get_resources" type="object" icon="fa-money">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="resource_affectation_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Affectation resources
                                    </span>
                                </div>
                            </button>

                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>

                                <!--                                <field name="customer_id" domain="[('customer_rank', '>', 0)]"/>-->
                                <field name="customer_id" required="1"/>
                                <field name="responsable"/>
                                <field name="product_owner"/>
                                <field name="team_lead"/>
                                <field name="first_date" required="1"/>
                            </group>
                            <group>
<!--                                <field name="secondary_customer_ids" widget="many2many_tags"-->
<!--                                       domain="[('id','!=',customer_id),('customer_rank', '>', 0)]"/>-->
                                <field name="secondary_customer_ids" widget="many2many_tags"
                                       domain="[('id','!=',customer_id)]"/>
                                <field name="last_date"/>
                                <field name="next_carnet" invisible="1"/>
                                <field name="next_abbo" invisible="1"/>
                                <field name="next_project" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Contacts" string="Contacts">
                                <!--                                <field name="contact_ids"/>-->
                                <field name="contact_ids" mode="kanban">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="color"/>
                                        <field name="name"/>
                                        <field name="title"/>
                                        <field name="type"/>
                                        <field name="email"/>
                                        <field name="parent_id"/>
                                        <field name="is_company"/>
                                        <field name="function"/>
                                        <field name="phone"/>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="zip"/>
                                        <field name="city"/>
                                        <field name="country_id"/>
                                        <field name="mobile"/>
                                        <field name="state_id"/>
                                        <field name="image_128"/>
                                        <field name="avatar_128"/>
                                        <field name="lang"/>
                                        <field name="comment"/>
                                        <field name="display_name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                    <div class="o_kanban_image">
                                                        <img alt="Contact image"
                                                             t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <field name="name"/>
                                                        <div t-if="record.function.raw_value">
                                                            <field name="function"/>
                                                        </div>
                                                        <div t-if="record.email.raw_value">
                                                            <field name="email" widget="email"/>
                                                        </div>
                                                        <div t-if="record.type.raw_value != 'contact'">
                                                            <div>
                                                                <field name="zip"/>
                                                                <field name="city"/>
                                                            </div>
                                                            <field t-if="record.state_id.raw_value" name="state_id"/>
                                                            <field name="country_id"/>
                                                        </div>
                                                        <div t-if="record.phone.raw_value">Phone:
                                                            <t t-esc="record.phone.value"/>
                                                        </div>
                                                        <div t-if="record.mobile.raw_value">Mobile:
                                                            <t t-esc="record.mobile.value"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page name="resources" string="Affectation Resources">
                                <field name="ressource_affectation_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <!--                                            <field name="name"/>-->
                                        <!--                                            <field name="client_id" domain="[]"/> -->
                                        <field name="client_id"
                                               domain="['|',('id', '=', parent.customer_id), ('id', 'in', parent.secondary_customer_ids)]"/>
                                        <field name="ressource_domain" invisible="1"/>
                                        <field name="ressource_id" domain="[('id','in', ressource_domain)]"
                                               context="{'default_client_id': client_id}"/>
                                        <field name="first_date"/>
                                        <field name="last_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_cadre_list">
            <field name="name">Contract Cadre list</field>
            <field name="model">contract.cadre</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="first_date"/>
                    <field name="last_date"/>
                    <field name="state" optional="show" widget="badge" decoration-success="state == 'actif'"
                           decoration-info="state == 'draft'"
                           decoration-danger="state == 'resilie'"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_cadre_search">
            <field name="name">Contract Cadre search</field>
            <field name="model">contract.cadre</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="customer_id"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter
                                name="filter_client_id"
                                string="Client"
                                context="{'group_by' : 'customer_id'}"
                        />
                        <filter
                                name="filter_state"
                                string="State"
                                context="{'group_by' : 'state'}"
                        />
                    </group>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="contract_cadre_action_window">
            <field name="name">Contract Cadre</field>
            <field name="res_model">contract.cadre</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Contrat Cadre" id="kzm_project_base_menu" parent="sale_subscription.menu_sale_subscription"
                  sequence="20"
                  action="contract_cadre_action_window"/>


    </data>
</odoo>

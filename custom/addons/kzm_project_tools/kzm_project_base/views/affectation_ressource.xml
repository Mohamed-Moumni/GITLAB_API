<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="affectation_ressource_list">
            <field name="name">Affectation ressource list</field>
            <field name="model">affectation.ressource</field>
            <field name="arch" type="xml">
                <tree editable="bottom" name="Affectation ressource">
                    <field name="client_id"/>
                    <field name="ressource_domain" invisible="1"/>
                    <field name="ressource_id" domain="[('id','in', ressource_domain)]" context="{'default_client_id': client_id}"/>
                    <field name="contract_id" invisible="1"/>
                    <field name="first_date"/>
                    <field name="last_date"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
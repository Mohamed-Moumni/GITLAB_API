<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="project_module_form">
            <field name="name">project module form</field>
            <field name="model">project.module</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tech_name"/>
                                <field name="git_link" widget="url"/>
                            </group>
                            <group>
                                <field name="etiquette" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="version" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_module_list">
            <field name="name">Project Module list</field>
            <field name="model">project.module</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tech_name"/>
                    <field name="git_link"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="project_module_action_window">
            <field name="name">Project module</field>
            <field name="res_model">project.module</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Module" id="project_module_base_menu" parent="connaissance_project_menu_1"
                  sequence="1"
                  action="project_module_action_window"/>


    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="tasks" name="Tâches">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Tâches</t>
            </t>
            <t t-if="task_ids" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Titre #</th>
                        <th class="text-end">Projet</th>
                        <th class="text-end">État</th>
                    </tr>
                </thead>
                <t t-foreach="task_ids" t-as="task_id">
                    <tr>
                        <td>
                            <a t-att-href="task_id.get_portal_url()">
                                <t t-out="task_id.name"/>
                            </a>
                        </td>
                        <td class="text-end">
                            <span t-field="task_id.project_id.name"/>
                        </td>
                        <td class="text-end">
                            <span t-field="task_id.stage_id.name"/>
                        </td>

                    </tr>
                </t>
            </t>
            <p t-else="">There are currently no tasks for your account.</p>
        </t>
    </template>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="project_carnet_form">
            <field name="name">Project Carnet form</field>
            <field name="model">project.carnet</field>
            <field name="arch" type="xml">
                <form duplicate="0" create="0" edit="0">
                    <header>
                        <button
                                string="Validate"
                                name="validate_method"
                                states="new"
                                type="object"
                                class="btn-primary"
                        />
                        <button
                                string="Cancel"
                                name="cancel_method"
                                states="in_progress"
                                type="object"
                        />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="contract_id"/>
                                <field name="project_id"/>
                                <field name="first_date"/>
                                <field name="last_date"/>
                                <field name="sale_line_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="task_id"/>
                                <field name="capacity" widget="float_time"/>
                                <field name="consumed" widget="float_time"/>
                                <field name="remaining" widget="float_time"/>
                                <field name="desc"/>
                                <field name="default_code" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_carnet_list">
            <field name="name">Project Carnet list</field>
            <field name="model">project.carnet</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="contract_id"/>
                    <field name="first_date"/>
                    <field name="last_date"/>
                    <field name="state" optional="show" widget="badge" decoration-success="state == 'in_progress'"
                           decoration-info="state == 'new'"
                           decoration-danger="state == 'expired'"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="project_carnet_action_window">
            <field name="name">Project Carnet</field>
            <field name="res_model">project.carnet</field>
            <field name="view_mode">tree,form</field>
        </record>


<!--        <menuitem name="Carnets" id="project_carnet_base_menu" parent="sale_subscription.menu_sale_subscription"-->
<!--                  sequence="20"-->
<!--                  action="project_carnet_action_window"/>-->


    </data>
</odoo>
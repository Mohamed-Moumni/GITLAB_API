<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="project_database_form">
            <field name="name">project database form</field>
            <field name="model">project.database</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="position" widget="statusbar" options="{'clickable': 1}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="get_backup_ids" icon="fa-cloud">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="backup_count" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Backups
                                    </span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="client"/>
                                <field name="contract_id"/>
                                <field name="link" widget="url"/>
                            </group>
                            <group>
                                <field name="first_date"/>
                                <field name="expiration_date"/>
                                <field name="version"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Modules" string="Affectation Modules">

                                <field name="affectation_module_ids" nolabel="1"
                                       context="{'default_database_id': active_id}">
                                    <tree editable="bottom" width="100%">
                                        <field name="module_id"/>
                                        <field name="database_id" invisible="1"/>
                                        <field name="domain_branch" invisible="1"/>
                                        <field name="branch_id" domain="[('id','in',domain_branch)]"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_database_list">
            <field name="name">Project database list</field>
            <field name="model">project.database</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="client"/>
                    <field name="link"/>
                    <field name="first_date"/>
                    <field name="expiration_date"/>
                    <field name="position" optional="show" widget="badge" decoration-success="position == 'prod'"
                           decoration-info="position == 'preprod'"
                           decoration-warning="position == 'test'"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="project_database_search">
            <field name="name">Project database search</field>
            <field name="model">project.database</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="client"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter
                                name="filter_state"
                                string="Client"
                                context="{'group_by' : 'client'}"
                        />
                        <filter
                                name="filter_product_id"
                                string="Position"
                                context="{'group_by' : 'position'}"
                        />
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="project_database_action_window">
            <field name="name">Project database</field>
            <field name="res_model">project.database</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Database" id="project_database_root_menu" parent="connaissance_project_root" sequence="2"/>

        <menuitem name="Database" id="project_database_base_menu" parent="project_database_root_menu" sequence="1"
                  action="project_database_action_window"/>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_form_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='restrict_template_rendering_setting']" position="after">

                <div class="col-12 col-lg-6 o_setting_box" id="bulk_api_key_setting">
                    <div class="o_setting_left_pane">
                        <field name="active_sms"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <field name="bulk_sms_key" attrs="{'readonly': [('active_sms', '=', False)]}"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="bulk_sms_key"/>
                        <div class="text-muted" id="bulk_sms_key">
                            Clé API pour l'intégration avec le service Bulk SMS.
                        </div>
                    </div>
                </div>


            </xpath>
        </field>
    </record>
</odoo>
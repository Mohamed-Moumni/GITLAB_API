<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ticket_template" inherit_id="website_helpdesk_form.ticket_submit" name="Ticket">
        <xpath expr="//form/div[1]" position="before">
            <h3 class="text-muted"> Your Informations </h3>
            <div style="height:1px; background-color : #DCDCDC;"></div>
            <br/>
            <br/>
        </xpath>

        <xpath expr="//form/div[3]" position="after">
            <group>
                    <div class="form-group row form-field">
                        <div class="col-lg-3 col-md-4 text-right">
                            <label class="col-form-label" for="copied_to">Copied To</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <input type="text" class="form-control o_website_form_input" name="copied_to" t-att-value="default_values.get('copied_to', '')"/>
                        </div>
                    </div>
                      <div class="form-group row form-field">
                        <div class="col-lg-3 col-md-4 text-right">
                            <label class="col-form-label" for="tel">Your Tel Number</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <input type="text" class="form-control o_website_form_input" name="tel" t-att-value="default_values.get('tel', '')"/>
                        </div>
                    </div>
                <br/>
            </group>
            <group>
                 <h3 class="text-muted"> Your Subscription Informations </h3>
                 <div style="height:1px; background-color : #DCDCDC;"></div>
                 <br/>
                 <br/>
                     <div class="form-group row form-field">
                            <div class="col-lg-3 col-md-4 text-right">
                                <label class="control-label" for="subscription_id">Subscription</label>
                            </div>
                        <div class="col-lg-7 col-md-8">
                            <select class="form-control o_website_form_input" name="subscription_id">
                                <t t-foreach="default_values.get('subscription_id', '')" t-as="subscription">
                                  <option t-attf-value="#{subscription.id}"><t t-esc="subscription.code"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
                      <div class="form-group row form-field">
                            <div class="col-lg-3 col-md-4 text-right">
                                <label class="control-label" for="ticket_type_id">Nature</label>
                            </div>
                        <div class="col-lg-7 col-md-8">
                            <select class="form-control o_website_form_input" name="ticket_type_id">
                                <t t-foreach="default_values.get('ticket_type_id', '')" t-as="nature">
                                  <option t-attf-value="#{nature.id}"><t t-esc="nature.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
            </group>
            <br/>
        </xpath>
         <xpath expr="//form/div[4]" position="before">
            <h3 class="text-muted"> Ticket Description </h3>
              <div style="height:1px; background-color : #DCDCDC;"></div>
            <br/>
            <br/>
        </xpath>
    </template>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chatgpt_conversation_form" model="ir.ui.view">
        <field name="name">chatgpt.conversation.form</field>
        <field name="model">chatgpt.conversation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="contract_id"/>
                        </group>
                        <group/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="API Requests">
                            <field name="line_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="chatgpt_conversation_tree" model="ir.ui.view">
        <field name="name">chatgpt.conversation.tree</field>
        <field name="model">chatgpt.conversation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_id"/>
            </tree>
        </field>
    </record>

    <record id="chatgpt_conversation_action" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">chatgpt.conversation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="online_chat_sidebar">
        <t t-call="portal.portal_record_sidebar">
            <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

            <t t-set="entries">
                <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                    <li class="list-group-item flex-grow-1">
                        <div class="d-grid flex-sm-nowrap" style="justify-items: center;">
                            <a href="/open-chat-online">
                                <button class="btn btn-secondary pt-1">
                                    Démarrer la conversation
                                </button>
                            </a>
                            <a t-if="conversation" t-attf-href="/ticket-chat-online/#{conversation.id}">
                                <button class="btn btn-warning pt-1 mt-2">
                                    Ça ne répond pas a votre question?
                                </button>
                            </a>
                        </div>

                    </li>
                    <li id="ticket-nav" class="list-group-item ps-0 flex-grow-1" t-ignore="true"
                        role="complementary">
                        <ul class="nav flex-column">
                            <li class="nav-item" id="nav-header">
                                <a class="nav-link ps-3" href="/conversations" style="max-width: 200px;">
                                    Historique
                                </a>
                            </li>
                            <li t-if="contract_id" class="nav-item ps-3" id="nav-chat"
                                groups="kzm_chatgpt.group_token_balance_access">
                                Solde Restant :
                                <t t-esc="contract_id.remained_tokens if contract_id.remained_tokens > 0 else 0"/>
                            </li>
                        </ul>
                    </li>
                </ul>
            </t>
        </t>
    </template>

    <template id="portal_conversation_list">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Conversations</t>
            </t>

            <div class="row mt16 o_project_portal_sidebar">
                <t t-call="kzm_chatgpt.online_chat_sidebar"/>
                <div id="conversation_content" class="col-12 col-lg justify-content-end">
                    <div t-if="not conversations" class="alert alert-info">
                        Il n'y a actuellement aucune conversation pour votre compte.
                    </div>
                    <t t-else="">
                        <t t-call="portal.portal_table">
                            <thead>
                                <tr>
                                    <th>Conversation</th>
                                    <th class="text-end" t-if="groupby != 'create_date'">Reporté le</th>
                                </tr>
                            </thead>
                            <t t-foreach="conversations" t-as="conversation_id">
                                <tr>
                                    <td class="text-start">
                                        <a t-attf-href="/my/conversation/#{conversation_id.id}">
                                            <small>#</small>
                                            <t t-out="conversation_id.id"/>
                                            <span class="ms-2" t-field="conversation_id.name"/>
                                        </a>
                                    </td>
                                    <td class="text-end" t-if="groupby != 'create_date'">
                                        <span t-field="conversation_id.create_date"
                                              t-options='{"widget": "datetime", "hide_seconds": True}'/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </t>
                </div>
            </div>

        </t>
    </template>

    <template id="portal_conversation">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Conversation</t>
            </t>

            <div class="row mt16 o_project_portal_sidebar">
                <t t-call="kzm_chatgpt.online_chat_sidebar"/>
                <div id="ticket_content" class="col-12 col-lg justify-content-end">
                    <div id="card" class="card">
                        <div id="card_header" class="card-header container" data-anchor="true">
                            <div class="row gs-0">
                                <div class="col-md">
                                    <h5 class="row mx-1 mb-1 mb-md-0">
                                        <div class="col-9 text-truncate">
                                            <span t-field="conversation.name"/>
                                            <small class="text-muted ">(#<span t-field="conversation.id"/>)
                                            </small>
                                        </div>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div id="card_body" class="card-body">
                            <div class="row mb-4">
                                <strong class="col-lg-2">Reported on</strong>
                                <span class="col-lg-10" t-field="conversation.create_date"
                                      t-options='{"widget": "datetime", "hide_seconds": True}'/>
                            </div>

                            <div t-if="not is_html_empty(conversation.description)" class="row mb-4" name="description">
                                <div class="col-lg-12" t-field="conversation.description"/>
                            </div>
                        </div>
                    </div>

                    <div class="o_portal_messages_container mt32" id="ticket_chat" data-anchor="true">
                        <h4>
                            <strong>Message and communication history</strong>
                        </h4>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="conversation"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>


</odoo>
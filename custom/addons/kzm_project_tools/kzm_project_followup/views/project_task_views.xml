<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


        <!-- project.task -->
        <record model="ir.ui.view" id="view_task_form_type_inherited">
            <field name="name">project.task.form.type.kzm.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_last_stage_update']" position="after">
                    <field name="type"/>
                </xpath>
            </field>
        </record>

        <!-- project.project -->
        <record model="ir.ui.view" id="edit_project_form_actions_inherited">
            <field name="name">project.project.form.plan.action.kzm.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Plan Action" name="planaction" groups="project.group_project_manager">
                        <field name="task_ids" context="{'default_project_id': id,'default_type':'action'}" nolabel="1" domain="[('type','=','action')]">
                            <tree string="Actions" editable="top">
                                <field name="message_needaction" invisible="1"/>
                                <field name="sequence" invisible="not context.get('seq_visible', False)"/>
                                <field name="name"/>
                                <field name="project_id" invisible="1"/>
                                <field name="user_id" invisible="context.get('user_invisible', False)"/>
                                <field name="planned_hours"/>
                                <field name="date_deadline"/>
                                <field name="stage_id" invisible="context.get('set_visible',False)"/>
                                <field name="type" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
